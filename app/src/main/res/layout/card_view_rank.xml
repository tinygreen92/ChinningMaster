<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="5">

            <!--<ImageView-->
                <!--android:id="@+id/imageView"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="top"-->
                <!--card_view:srcCompat="@mipmap/ic_launcher_round" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rankingUserId"
                android:gravity="center"
                android:textSize="20dp"
                android:text="작성자" />



        </LinearLayout>>

        <!--articel_id-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/textCount"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="횟수"
                android:textSize="18dp"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/textElapsedTime"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textCount"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="18dp"
                android:text="경과 시간" />

            <TextView
                android:id="@+id/textCorrectionRate"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textElapsedTime"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="18dp"
                android:text="교정률" />

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>